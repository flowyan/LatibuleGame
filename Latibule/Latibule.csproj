<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <ImplicitUsings>enable</ImplicitUsings>
        <Nullable>enable</Nullable>
        <Configurations>Debug;Release</Configurations>
        <Platforms>x64</Platforms>
        <TargetFramework>net10.0</TargetFramework>
        <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\FNA\FNA.Core.csproj">
            <ExcludeFromSingleFile>true</ExcludeFromSingleFile>
        </ProjectReference>
        <ProjectReference Include="..\FontStashSharp\src\XNA\FontStashSharp.FNA.Core.csproj" />
        <ProjectReference Include="..\Nez\Nez.ImGui\Nez.FNA.Core.ImGui.csproj" />
        <ProjectReference Include="..\Nez\Nez.Persistence\Nez.FNA.Core.Persistence.csproj" />
        <ProjectReference Include="..\Nez\Nez.Portable\Nez.FNA.Core.csproj" />
    </ItemGroup>

    <ItemGroup>
        <None Include="lib\fnalibs\x64\**\*">
            <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
            <Link>%(RecursiveDir)%(Filename)%(Extension)</Link>
        </None>
        <None Include="Assets\**\*">
            <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Assets\texture\stone.jpg">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
        <None Update="Assets\texture\material\stone.jpg">
          <CopyToOutputDirectory>Always</CopyToOutputDirectory>
        </None>
    </ItemGroup>

    <ItemGroup>
        <Folder Include="Assets\shader\" />
        <Folder Include="lib\"/>
        <Folder Include="obj\"/>
    </ItemGroup>

</Project>
